            function GenerateMailNickname(teamName){
                try
                {
                    var mailName = teamName.toLowerCase().replace(/\s/gmi, '-');
                    return mailName;
                }
                catch(error)
                {
                    $("#lblError").text("Error Creating Mail Nickname.");
                    $("#errorSection").slideDown();
