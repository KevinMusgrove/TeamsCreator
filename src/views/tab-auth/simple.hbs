                            $("#errorSection").slideDown();                            
                            console.log(xhr.responseText);   
                            resolve('');
                        },
                    }); 
                }, 10000);
                });   
            }

            async function GetManagementGroup(){
                let result;
                try{
                    result = await $.ajax({
                    url: "https://graph.microsoft.com/v1.0/groups/cecac2e4-41f6-4f5e-abd7-1b72f5d49625/members",
                    beforeSend: function(request) {
                        request.setRequestHeader("Authorization", "Bearer " + GlobalAccessToken);
                    }
                });
                    return result.value;
                }
                catch(error){
                    $("#lblError").text("Error Getting Owners.");
                    $("#errorSection").slideDown();          
                }
            }

           async function GetAtbAllGroup(){
               let result;
               try{
                    result = await $.ajax({
